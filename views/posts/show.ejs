<% include ../partials/header %>
  <div class="row">
    <div class="col-sm-3 col-md-offset-4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= post.title %></h3>
          <div class="row">
              <div class="col-sm-2">
                  <img src="<%= post.user.photo %>"alt="profileimg" class="img-circle" width="50" height="50">
              </div>  
              <div class="col-sm-10">
                <div class="row">
                  <div class="col-sm-4">
                    <p ><a class="h" href="/users/<%= post.user.id %>"><%= post.user.username %></a></p>
                  </div>
                  <div class="col-sm-4">
                      <p class="right">Date:<%= post.date %></p>
                  </div>
                </div>
              </div>
            </div>
        </div>
          <p><%= post.postContent%></p>
          <img class="comment_image" src="<%= post.photo%>" alt="my cat" width=250 height=250> 
      </div>
    </div>
  </div>
          <% post.comments.forEach(function(comment) { %>
              <div class="row space">
                  <div class="col-sm-4 col-md-offset-4">
                      <img src="<%= comment.author.photo %>"alt="profileimg" class="img-circle" width="50" height="50">
                      <p class="comment">Comment by: <%=comment.author.username%> <%=comment.commentContent%></p>
                      <p class="comment"><%=comment.date%></p>
                  </div>
              </div>
          <% }) %>
   <div class="col-sm-4 col-md-offset-4">
         <form action="/posts/<%= post.id %>/comments" method="POST">
                <label for="coments"></label>
                    <textarea type="text" name="comment[commentContent]" id="comment"class="form-control" rows="2" id="commentContent"  placeholder="Write your comment.." ></textarea>
                <input class="btn btn-success btn-xs" value="Submit" type="submit">
        
        </form>
    </div>
  
<% include ../partials/footer %>