<% include ../partials/header %>


  <div class="row">
    <div class="col-sm-4 col-md-offset-4">
   
      <div class="thumbnail">
        <div class="caption">
          <h3><%= post.title %></h3>
          <p><a href="/users/index"> <%= post.user.username %></a></p>
          <p>Date:<%= post.date %></p>
          <p><%= post.postContent%></p>
          <img src="<%= post.photo%>" alt="my cat" width=200 height=200> 

        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-md-offset-4">
     <% post.comments.forEach(function(comment) { %>
          <% console.log(comment) %>
          <p><%=comment.commentContent%></p>
          <p><%=comment.author%></p>
          <p><%=comment.date%></p>          
      <% }) %>
    </div>
  </div>
  <div class="row">
   <div class="col-sm-4 col-md-offset-4">
     <form action="/posts/<%= post.id %>/comments" method="POST">
            <label for="coments"></label>
            <textarea type="text" name="comment[commentContent]" id="comment"class="form-control" rows="2" id="commentContent"  placeholder="Write your comment.." ></textarea>
            <input class="btn btn-primary btn-xs" value="Submit" type="submit">
        </div>
      </form>
  </div>

<% include ../partials/footer %>