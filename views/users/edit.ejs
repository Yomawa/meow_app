     <div class="form-group">
      <label for="zipcode"> Zip code:</label>
      <input type="zipcode" value="<%= user.zipcode %>" id="zipcode" name="user[zipcode]" class="form-control">
    </div>

    <div class="form-group"> 
      <label for="catname"> Cat Name: </label>
      <input type="text" value="<%= user.catname %>" id="catname" name="user[catname]" class="form-control" autofocus>
    </div>
     <div class="form-group"> 
      <label for="age"> Age:</label>
      <input type="text" value="<%= user.age %>" id="age" name="user[age]" class="form-control" autofocus>
    </div>
    <div class="form-group">
      <label for="favtoys"> Favorite Toys:</label>
      <input type="favtoys" value="" id="favtoys" name="user[favtoys]" class="form-control">
    </div>
    <div class="form-group">
      <label for="morecat">Tell us more about your cat:</label>
      <!-- <textarea for="morecat"> </textarea> -->
      <input type="morecat" value="<%= user.morecat %>" id="morecat" name="user[morecat]" class="form-control">
    </div>
      <div class="form-group">
      <label for="moreowner">Owner info:</label>
      <input type="moreowner" value="<%= user.moreowner %>" id="moreowner" name="user[moreowner]" class="form-control">
    </div>
    <input type="submit" value="Edit Profile" class="btn btn-primary">

  </form>
